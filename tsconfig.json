{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react-jsx", // Enables JSX support in TypeScript
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src",
    "src/.core",
    "src/.core/types.ts",
    "src/.core/constants.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
